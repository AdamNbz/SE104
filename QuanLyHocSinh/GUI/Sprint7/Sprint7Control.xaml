<UserControl x:Class="GUI.Sprint7.Sprint7Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Sprint7"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Loaded="UserControl_Loaded">
    <materialDesign:Card Margin="16" UniformCornerRadius="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="THAY ĐỔI TÊN MÔN HỌC"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <!-- Selection Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Môn học hiện tại -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Môn học hiện tại"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <ComboBox Grid.Column="1"
                              x:Name="cbx_MonHoc"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              SelectionChanged="cbx_MonHoc_SelectionChanged"/>
                </Grid>

                <!-- Mã môn học hiện tại -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Mã môn học hiện tại"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <TextBox Grid.Column="1"
                             x:Name="txb_MaMonHoc"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             IsReadOnly="True"/>
                </Grid>

                <!-- Tên mới của môn học -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Tên mới của môn học"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <TextBox Grid.Column="1"
                             x:Name="txb_TenMoi"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             MaxLength="100"/>
                </Grid>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">

                <Button x:Name="btn_LuuThayDoi"
                        Content="Lưu thay đổi"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"
                        Click="btn_LuuThayDoi_Click"/>

                <Button x:Name="btn_Thoat"
                        Content="Thoát"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="8,0,0,0"
                        Click="btn_Thoat_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
