<UserControl x:Class="GUI.Sprint7.Sprint7Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Sprint7"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Loaded="UserControl_Loaded">
    <materialDesign:Card Margin="16" UniformCornerRadius="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Header -->
                <TextBlock Text="THAY ĐỔI TÊN LỚP"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Selection Controls -->
                <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tên lớp hiện tại -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Tên lớp hiện tại"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <ComboBox Grid.Column="1"
                              x:Name="cbx_MonHoc"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="15"
                              SelectionChanged="cbx_MonHoc_SelectionChanged"/>
                </Grid>

                <!-- Mã lớp hiện tại -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Mã lớp hiện tại"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <TextBox Grid.Column="1"
                             x:Name="txb_MaMonHoc"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="15"
                             IsReadOnly="True"
                             Background="#CCCCCC"
                             Cursor="Arrow"/>
                </Grid>

                <!-- Tên lớp mới -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Tên lớp mới"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <TextBox Grid.Column="1"
                             x:Name="txb_TenMoi"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="15"
                             MaxLength="100"
                             materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                </Grid>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,32,0,0">

                    <Button x:Name="btn_LuuThayDoi"
                            Content="Lưu thay đổi"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            FontSize="16"
                            Margin="0,0,8,0"
                            Click="btn_LuuThayDoi_Click"/>

                    <Button x:Name="btn_Thoat"
                            Content="Thoát"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            FontSize="16"
                            Margin="8,0,0,0"
                            Click="btn_Thoat_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
